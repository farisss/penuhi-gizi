{$DEFINE USE_DIRECT3D}
{.$DEFINE USE_DIRECT3D8}
{$IFNDEF USE_DIRECT3D8}
  {$DEFINE USE_DIRECT3D9}
  {.$DEFINE USE_DIRECT3D9Ex}
{$ENDIF}

{$DEFINE USE_ZLIB_STATIC}
{$DEFINE USE_LIBJPEG}
{.$DEFINE USE_OPENAL}
{$DEFINE USE_OGG_STATIC}
{$DEFINE USE_THEORA_STATIC}

{.$DEFINE USE_LOG_FLUSH}
{$DEFINE USE_ZIP}
{$DEFINE USE_JOYSTICK}
{$DEFINE USE_JPG}
{$DEFINE USE_PNG}
{$DEFINE USE_PVR}
{$DEFINE USE_TGA}
{$DEFINE USE_SENGINE}
{$DEFINE USE_PARTICLES}
{$DEFINE USE_SOUND}
{$IFDEF USE_SOUND}
  {$DEFINE USE_OGG}
  {$DEFINE USE_WAV}
{$ENDIF}
{$DEFINE USE_VIDEO}
{$IFDEF USE_VIDEO}
  {$DEFINE USE_THEORA}
{$ENDIF}
{$DEFINE USE_TRIANGULATION}

// Enable if you want to use zlib compression functions
// WARNING: ZenGL doesn't provide all needed object files, you should use yours(just have no desire to recompile zlib for every platform)
{$IFDEF USE_ZLIB_STATIC}
  {.$DEFINE USE_ZLIB_FULL}
{$ENDIF}

// Disable unsupported features
{$IFNDEF FPC}
  {$UNDEF USE_OGG_STATIC}
  {$UNDEF USE_THEORA_STATIC}
{$ENDIF}

// Specially for buggy Delphi, which trying to parse everything...
{$IFDEF FPC}
  {$I zgl_fpc.cfg}

  {$IFDEF cpui386}
    {$DEFINE USE_ASM}
  {$ENDIF}
{$ELSE}
  {$MINENUMSIZE 4}
  {$DEFINE USE_ASM}
  {$DEFINE CPUi386}
  {$WARN COMBINING_SIGNED_UNSIGNED OFF}
  {$WARN COMPARING_SIGNED_UNSIGNED OFF}
{$ENDIF}
